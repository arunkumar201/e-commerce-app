{
	"extends": "@arunp/typescript-config/node.json",
	"compilerOptions": {
		"jsx": "react",
		"module": "NodeNext",
		"target": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"noImplicitAny": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"pretty": true,
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["*"]
		},
		"sourceMap": true,
		"types": ["node"]
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
